{
	"name": "@theliaison/supabase",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"exports": {
		"./database-types": {
			"types": "./dist/database-types.d.ts",
			"default": "./src/database-types.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf .turbo node_modules",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"gen:types": "supabase gen types typescript --project-id 'vsgxmrltaxjozgytqgwh' --schema public > ./src/database-types.ts && pnpm run lint --fix && pnpm run format --write"
	},
	"dependencies": {
		"supabase": "^1.172.2"
	},
	"devDependencies": {
		"@theliaison/eslint-config": "workspace:*",
		"@theliaison/prettier-config": "workspace:*",
		"@theliaison/tsconfig": "workspace:*",
		"@types/node": "20.12.14",
		"eslint": "^9.2.0",
		"prettier": "^3.2.5",
		"typescript": "^5.4.5"
	},
	"prettier": "@theliaison/prettier-config"
}
